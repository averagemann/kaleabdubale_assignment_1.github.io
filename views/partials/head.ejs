
  <title><%= title %></title>
  
  <!-- CSS for home.ejs -->

  <!-- Reset some default styles for consistency -->
  <style>
    body, h1, h2, p, ul, li {
      margin: 0;
      padding: 0;
    }

    /* Set a background color and default font for the entire page */
    body {
      background-color: #f4f4f4;
      font-family: Arial, sans-serif;
    }

    /* Style the header and navigation bar */
    header {
      background-color: #333;
      color: white;
      padding: 100px; /* Increased top and bottom padding for taller navigation bar */
      text-align: center;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .navbar ul {
      list-style-type: none;
      padding: 0;
    }

    .navbar li {
      display: inline;
      margin-right: 10px;
    }

    .navbar a {
      text-decoration: none;
      color: white;
      font-weight: bold;
      font-size: 30px;
      padding: 0 10px; /* Add padding to space out the links */
      border-right: 1px solid #fff; /* Add a white border on the right side */
      transition: border-color 0.3s ease; /* Smooth transition for border color */
    }

   

    /* Style the main content section */
    main {
      padding: 20px;
    }

    .content {
      background-color: #fff;
      padding: 20px;
      box-shadow: 0px 0px 10px black;
    }

    /* Style headings and paragraphs */
    h1 {
      font-size: 24px;
      margin-bottom: 20px;
    }

    p {
      font-size: 16px;
      line-height: 1.5;
      margin-bottom: 15px;
    }

    /* Style the logo image */
    .logo {
      margin-right: 10px; /* Add space to the right of the logo */
    }
  </style>

  